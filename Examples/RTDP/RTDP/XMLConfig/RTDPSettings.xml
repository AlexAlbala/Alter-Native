  </GeolocationSettings>
  <FusionSettings>
    <fusionMode>mark</fusionMode><!-- mark, merge, both -->
  </FusionSettings>
  <IrImageSettings>
    <irGradient>rainbow</irGradient><!-- rainbow, orange, gray -->
    <irScaleMode>camera</irScaleMode><!-- camera, data, user -->
