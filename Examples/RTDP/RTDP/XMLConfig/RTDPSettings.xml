<?xml version="1.0" encoding="utf-8" ?>
<!-- Temperature values are expressed in Kelvin-->
<RTDPSettings>
  <GlobalSettings>
    <sendHotspotAlarm>True</sendHotspotAlarm>
    <doSegmentation>True</doSegmentation>
    <doGeolocation>True</doGeolocation>
    <doImageFusion>True</doImageFusion>
  </GlobalSettings>
  <TerrainModelSettings>
    <demPrecision>medium</demPrecision>
    <localGeoidHeight>48.43</localGeoidHeight>
  </TerrainModelSettings>
  <SegmentationSettings>
    <hotspotThreshold>330</hotspotThreshold>
  </SegmentationSettings>
  <GeolocationSettings>
    <geolocateIRimage>False</geolocateIRimage>
    <geolocateVIimage>False</geolocateVIimage>
    <geolocateHotspots>True</geolocateHotspots>
    <zeroUavPitchRoll>False</zeroUavPitchRoll>
    <zeroCamPanRoll>False</zeroCamPanRoll>
    <zeroCamDistance>False</zeroCamDistance>
    <zeroGpsDistance>False</zeroGpsDistance>
